---
import Layout from "@layouts/PageLayout.astro";
import { getCollection } from "astro:content";

const notes = await getCollection("note");
---

<Layout title="メモとか">
    <ul>
        {
            notes.map((note) => (
                <li>
                    <a href={`/notes/${note.slug}`}>{note.data.title}</a>
                </li>
            ))
        }
    </ul>
</Layout>
