---
import BaseLayout from "@layouts/BaseLayout.astro";
const links = {
    Twitter: "https://twitter.com/sfx_as",
    GitHub: "https://github.com/shaaaaaQ",
    "Misskey.io": "https://misskey.io/@sfx__as",
    "切腹🔑": "https://msk.seppuku.club/@sh",
    "osu!": "https://osu.ppy.sh/users/16234052",
    Geartics: "https://www.geartics.com/sfx_as",
    "📝": "/notes",
};
---

<BaseLayout title="sh">
    <div
        class="flex flex-col bg-slate-700 w-fit h-fit items-center rounded-md shadow-2xl m-auto p-16 gap-10"
    >
        <img
            class="rounded-full"
            width="120"
            height="120"
            src="/images/icon-1.png"
        />
        <div class="flex flex-col gap-3">
            {
                Object.entries(links).map(([name, url]) => (
                    <a
                        class="text-slate-300 hover:opacity-70 transition-opacity text-xl"
                        href={url}
                    >
                        {name}
                    </a>
                ))
            }
        </div>
    </div>
</BaseLayout>

<style lang="postcss">
    :global(html) {
        @apply bg-slate-600;
    }
    :global(body) {
        @apply p-4 flex min-h-screen;
    }
</style>
