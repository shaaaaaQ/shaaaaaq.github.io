---
import BaseLayout from "@layouts/BaseLayout.astro";
const { title } = Astro.props.frontmatter;
---

<BaseLayout title={title}>
    <div class="bg-slate-700 text-slate-300 max-w-[50rem] mx-auto p-3 h-full">
        {title && <h1 class="text-center">{title}</h1>}
        <slot />
    </div>
</BaseLayout>

<style lang="postcss">
    :global(html) {
        @apply bg-slate-600 h-full;
    }
    :global(body) {
        @apply px-4 h-full;
    }
    :global(h1) {
        @apply text-4xl font-bold my-4;
    }
    :global(h2) {
        @apply text-3xl font-bold my-3;
    }
    :global(h3) {
        @apply text-2xl font-bold my-3;
    }
    :global(a) {
        @apply hover:text-slate-400 transition-colors;
    }
</style>
