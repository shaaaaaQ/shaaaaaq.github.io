---
import { Icon } from "astro-icon/components";
import BaseLayout from "@layouts/BaseLayout.astro";
const { title } = Astro.props.frontmatter;
---

<BaseLayout title={title}>
    <div
        class="bg-slate-700 text-slate-300 max-w-[50rem] mx-auto p-3 h-screen border-solid border-x-2 border-slate-800 overflow-y-auto scrollbar scrollbar-thumb-slate-600 scrollbar-track-transparent"
    >
        <div class="flex gap-3 items-center">
            <button
                class="hover:bg-slate-600 p-2 rounded-full"
                onclick="history.back()"
            >
                <Icon name="mdi:arrow-back" size={35} />
            </button>
            {title && <h1 class="text-center">{title}</h1>}
        </div>
        <slot />
    </div>
</BaseLayout>

<style lang="postcss" is:global>
    html {
        @apply bg-slate-600 h-screen;
    }
    body {
        @apply h-screen;
    }
    h1 {
        @apply text-4xl font-bold my-3;
    }
    h2 {
        @apply text-3xl font-bold my-3;
    }
    h3 {
        @apply text-2xl font-bold my-3;
    }
    a {
        @apply hover:text-slate-400 transition-colors underline;
    }
    ul {
        @apply list-[revert] list-inside;
    }
    ul ul {
        @apply ps-5;
    }
    td {
        @apply px-2 py-1;
    }
</style>
